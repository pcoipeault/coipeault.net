{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Material list</h1>
    <ul>
        <li>
            <a href="{{ path('material_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    <div class="table-responsive">
            <table class="table table-bordered table-striped records_list">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Createdat</th>
                    <th>Updatedat</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for entity in entities %}
                <tr>
                    <td>{{ entity.name }}</td>
                    <td>{{ entity.price }}</td>
                    <td>{% if entity.createdAt %}{{ entity.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                    <td>{% if entity.updatedAt %}{{ entity.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                    <td>
                        <ul>
                            <li>
                                <a href="{{ path('material_show', { 'id': entity.id }) }}">show</a>
                            </li>
                            <li>
                                <a href="{{ path('material_edit', { 'id': entity.id }) }}">edit</a>
                            </li>
                        </ul>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <ul>
        <li>
            <a href="{{ path('material_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
{% endblock %}
